<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prefGeneralLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/prefGeneralIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_info_black_24dp" />

    <TextView
        android:id="@+id/prefGeneralText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/prefGeneralIcon"
        app:layout_constraintLeft_toRightOf="@+id/prefGeneralIcon"
        app:layout_constraintTop_toTopOf="@+id/prefGeneralIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>
