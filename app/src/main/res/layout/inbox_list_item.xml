<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inboxCard"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inboxListBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backToInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_move_to_inbox_black_24dp" />

        <ImageView
            android:id="@+id/clearList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            app:layout_constraintRight_toLeftOf="@+id/backToInbox"
            app:srcCompat="@drawable/ic_done_all_black_24dp" />

        <TextView
            android:id="@+id/listTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:text="List Name"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/clearList"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/tagandtaskholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/listTextView">

            <LinearLayout
                android:id="@+id/checklistEncloser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/listTextView"
                tools:layout_editor_absoluteX="8dp">

                <include
                    android:id="@+id/item1"
                    layout="@layout/inbox_checklist_list_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/item2"
                    layout="@layout/inbox_checklist_list_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/item3"
                    layout="@layout/inbox_checklist_list_item" />

                <ImageView
                    android:id="@+id/itemsMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_more_horiz_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagOnTaskLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tagDivider">

                <include
                    android:id="@+id/tag1"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <include
                    android:id="@+id/tag2"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <include
                    android:id="@+id/tag3"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <include
                    android:id="@+id/tag4"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <include
                    android:id="@+id/tag5"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <include
                    android:id="@+id/tag6"
                    layout="@layout/inbox_tag_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0" />

                <ImageView
                    android:id="@+id/tagMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_more_horiz_black_24dp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/timeDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tagandtaskholder" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateTimeInboxLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeDivider">

            <TextView
                android:id="@+id/dateInboxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Put Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeInboxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:text="Put Time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/timeIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/dateInboxText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dateInboxText"
                app:srcCompat="@drawable/ic_access_time_black_24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>