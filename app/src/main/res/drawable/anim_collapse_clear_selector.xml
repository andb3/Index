<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <item
        android:id="@+id/off"
        android:drawable="@drawable/ic_expand_more_black_24dp"
        app:state_off="true" />

    <item
        android:id="@+id/on"
        android:drawable="@drawable/ic_clear_black_24dp" />

    <transition
        android:drawable="@drawable/anim_collapse_clear"
        android:fromId="@id/off"
        android:toId="@id/on" />

    <transition
        android:drawable="@drawable/anim_collapse_clear_reverse"
        android:fromId="@id/on"
        android:toId="@id/off" />


</animated-selector>